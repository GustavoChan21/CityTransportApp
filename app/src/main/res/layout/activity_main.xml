<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        tools:layout_editor_absoluteX="-67dp"
        tools:layout_editor_absoluteY="-127dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24pt"
            android:text="Bienvenidos a"
            android:textColor="@color/black"
            android:textSize="14pt"

            android:textStyle="bold"/>

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14pt"
            android:text="YuConect!"
            android:textColor="@color/black"
            android:textSize="24pt"

            android:textStyle="bold"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title2"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="12pt"
            android:layout_marginTop="16pt"
            android:layout_marginEnd="12pt"
            android:text="@string/description_carrusel1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10pt"

            android:textStyle="bold" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationViewEnd"
            android:layout_width="340dp"
            android:layout_height="240dp"
            android:layout_below="@+id/description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12pt"
            android:layout_marginBottom="12pt"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/caminar" />

        <TextView
            android:id="@+id/description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/animationViewEnd"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="12pt"
            android:layout_marginTop="6pt"
            android:layout_marginEnd="12pt"
            android:text="@string/description_carrusel2"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10pt"

            android:textStyle="bold" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>